<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DslTabLayout">
        <attr name="dsl_item_is_equ_width" format="boolean" />
        <attr name="dsl_default_index" format="integer" />
        <!--指定item的宽度-->
        <attr name="dsl_item_width" format="dimension" />
        <attr name="dsl_item_default_height" format="dimension" />
        <attr name="dsl_draw_border" format="boolean" />
        <attr name="dsl_draw_divider" format="boolean" />

        <!--indicator 指示器相关属性-->
        <attr name="dsl_indicator_drawable" format="reference" />
        <attr name="dsl_indicator_color" format="color" />

        <attr name="dsl_indicator_style" format="enum">
            <enum name="STYLE_NONE" value="0" />
            <enum name="STYLE_TOP" value="0x11" />
            <enum name="STYLE_BOTTOM" value="0x12" />
            <enum name="STYLE_BACKGROUND" value="0x1" />
        </attr>

        <attr name="dsl_indicator_enable_flow" format="boolean" />
        <attr name="dsl_indicator_flow_step" format="integer" />

        <attr name="dsl_indicator_width" format="dimension|flags">
            <flag name="WRAP_CONTENT" value="-2" />
            <flag name="MATCH_PARENT" value="-1" />
        </attr>
        <attr name="dsl_indicator_width_offset" format="dimension" />

        <attr name="dsl_indicator_height" format="dimension|flags">
            <flag name="WRAP_CONTENT" value="-2" />
            <flag name="MATCH_PARENT" value="-1" />
        </attr>
        <attr name="dsl_indicator_height_offset" format="dimension" />
        <attr name="dsl_indicator_x_offset" format="dimension" />
        <attr name="dsl_indicator_y_offset" format="dimension" />

        <attr name="dsl_indicator_content_index" format="integer" />
        <!--end...-->

        <!--TabLayoutConfig 相关属性-->
        <attr name="dsl_tab_select_color" format="color" />
        <attr name="dsl_tab_deselect_color" format="color" />
        <attr name="dsl_tab_ico_select_color" format="color" />
        <attr name="dsl_tab_ico_deselect_color" format="color" />
        <attr name="dsl_tab_enable_text_color" format="boolean" />
        <attr name="dsl_tab_enable_ico_color" format="boolean" />
        <attr name="dsl_tab_enable_text_bold" format="boolean" />
        <attr name="dsl_tab_enable_gradient_color" format="boolean" />
        <attr name="dsl_tab_enable_ico_gradient_color" format="boolean" />
        <attr name="dsl_tab_enable_gradient_scale" format="boolean" />
        <attr name="dsl_tab_min_scale" format="float" />
        <attr name="dsl_tab_max_scale" format="float" />
        <!--end...-->

        <!--Divider 分割线相关属性-->

        <!--end...-->

        <!--Border 边框相关属性-->
        <attr name="dsl_border_drawable" format="reference" />
        <attr name="dsl_border_stroke_color" format="color" />
        <attr name="dsl_border_solid_color" format="color" />
        <attr name="dsl_border_stroke_width" format="dimension" />
        <attr name="dsl_border_radius_size" format="dimension" />
        <attr name="dsl_border_draw_item_background" format="dimension" />
        <!--end...-->

    </declare-styleable>

    <attr name="dsl_layout_width" format="string" />
    <attr name="dsl_layout_height" format="string" />
    <attr name="dsl_layout_indicator_content_index" format="integer" />

    <declare-styleable name="DslTabLayout_Layout">
        <attr name="dsl_layout_width" />
        <attr name="dsl_layout_height" />
        <attr name="dsl_layout_indicator_content_index" />
    </declare-styleable>
</resources>